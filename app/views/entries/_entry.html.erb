
<div id="<%= dom_id entry %>" class="card p-5 m-1">
  
  <p>
    <h3><%= entry.name %></h3>
  </p>

  <p>
    <strong>Téma sezení:</strong><br>
    <%= entry.title %>
  </p>

  <p>
    <strong>Délka sezení:</strong><br>
    <%= entry.length %> minut
  </p>

  <p>
    <strong>Číslo sezení:</strong><br>
    <%= entry.session %>
  </p>

  <p>
    <strong>Zápis ze sezení:</strong><br>
    <%= entry.body %>
  </p>
  <p>počet zobrazení: <%= entry.views %></p>
  <p>vytvořeno uživatelem <%= link_to entry.user.name, user_path(entry.user) %></p>

</div>

