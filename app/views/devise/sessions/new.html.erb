<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5 bg-custom-login">
    
    <h2>Přihlásit se:</h2>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, value: "E-mail:" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password, value: "Heslo:" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, value: "Zapamatovat si mě" %>
    </div>
  <% end %>
<br>
  <div class="actions">
    <%= f.submit "Přihlásit se", class:"btn btn-success" %>
  </div>
<% end %>
<br><br>
<%= render "devise/shared/links" %>



  </div>
</div>

  



